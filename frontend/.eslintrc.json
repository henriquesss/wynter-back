{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"rules": {
		"indent": ["off"],
		"linebreak-style": ["warn", "unix"],
		"quotes": ["off"],
		"semi": ["off"],
		"react/prop-types": ["off"],
		"no-unused-vars": ["off"],
		"no-mixed-spaces-and-tabs": ["off"] 
	},
	"overrides": [
		{
			"files": ["**/*.test.js", "**/*.test.jsx"],
			"env": {
				"jest": true
			}
		}
	]
}
